<div class="container mt-6" style="background-color: white;">

  <div class="show-image-container">

    <div class="image-card">
      <img alt="" src="https://supercarclubglobal.com/wp-content/uploads/2016/03/5219843272006-ferrari-testarossa.jpg" class="show-image">
    </div>

    <div class="sub-image-card">
      <img alt="" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTU2_sapjP76nZGaUXyn6rVTz_v8VvrMIZbcA&usqp=CAU" class="sub-image-top">
      <img alt="" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQjPRsceA-5_fxcAUHCdWfmJaCD4x6CiHWLvw&usqp=CAU" class="sub-image">
    </div>

    <div class="sub-image-card">
      <img alt="" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRu4wZb9C0BjQRBaP9unWBnjktsQFfN_vYyfA&usqp=CAU" class="sub-image-top">
      <img alt="" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT7DpUfEmVC-wz6U4AfzMkolOkFuaA118X4RA&usqp=CAU" class="sub-image">
    </div>

  </div>

  <div class="show-container">

      <div class="sub-container">
        <div class="brand">
          <h3> <%= @car.brand %> </h3>
          <p>  <%= @car.description %> </p>
        </div>

        <div class="show-description">
          <p> <%= image_tag 'parking.webp', class:"icons" %> Free parking in city center </p>
          <p> <%= image_tag 'petrol.webp', class:"icons" %> Refurbish at gas stantion </p>
          <p> <%= image_tag 'sensors.webp', class:"icons" %> Parking alerts with sensors </p>
          <p> <%= image_tag 'smoking.webp', class:"icons" %> No smoking in the car </p>

        </div>
      </div>

      <div class="sub-container-2">
        <div class="star-flex">
          <p> <strong><%= @car.price %>â‚¬/day </strong> </p>
          <p> <i class="fas fa-star"></i> 4.4(44)</p>
        </div>
        <p> <%#= link_to "Edit", edit_car_path %> </p>
        <p> <%#= link_to "Delete", car_path(@car.id), method: :delete, data: { confirm: "Are you sure ?"}, class:"btn btn-danger" %> </p>
        <p> <%= link_to "Reserve", new_car_booking_path(@car), class:"btn btn-reserve" %> </p>
      </div>

  </div>


</div>
